<h1>GUESS IT RIGHT</h1>
<% @letters.each do |letter| %>
  <div class="py-2 px-3 mb-2 bg-primary text-white d-inline-block"><%= letter %></div>
<% end %>

<p>Find a word</p>
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="letters" value="<%= @letters.join(" ") %>">
  <div class="input-group mb-3">
    <input type="text" class="form-control" name="word" placeholder="Type here">
    <input type="submit" class="btn btn-outline-secondary" value="GO">
  </div>
</form>
